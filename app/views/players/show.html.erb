<p id="notice"><%= notice %></p>

<p>
  <strong>Player:</strong>
  <%= @player.full_name %>
</p>

<p>
  <strong>Birth year:</strong>
  <%= @player.birth_year %>
</p>

<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Destroy', @player, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', players_path %>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>League</th>
      <th>Team</th>
      <th>Games</th>
      <th>At Bats</th>
      <th>Runs</th>
      <th>Hits</th>
      <th>Batting Average</th>
      <th>Doubles</th>
      <th>Triples</th>
      <th>Home Runs</th>
      <th>RBIs</th>
      <th>Stolen Bases</th>
      <th>Slugging Percentage</th>
      <th colspan="11"></th>
    </tr>
  </thead>

  <tbody>
    <% @seasons.each do |season| %>
      <tr>
        <td><%= season.year %></td>
        <td><%= season.league %></td>
        <td><%= season.team_id %></td>
        <td><%= season.games %></td>
        <td><%= season.at_bats %></td>
        <td><%= season.runs %></td>
        <td><%= season.hits %></td>
        <td><%= season.batting_average %></td>
        <td><%= season.doubles %></td>
        <td><%= season.triples %></td>
        <td><%= season.home_runs %></td>
        <td><%= season.rbis %></td>
        <td><%= season.stolen_bases %></td>
        <td><%= season.slugging_percentage %></td>
      </tr>
    <% end %>
  </tbody>

  <tbody>
      <tr>
        <td>-</td>
        <td>-</td>
        <td>-</td>
        <td><%= @player.career_stats("games") %></td>
        <td><%= @player.career_stats("at_bats") %></td>
        <td><%= @player.career_stats("runs") %></td>
        <td><%= @player.career_stats("hits") %></td>
        <td><%= @player.career_stats("batting_average") %></td>
        <td><%= @player.career_stats("doubles") %></td>
        <td><%= @player.career_stats("triples") %></td>
        <td><%= @player.career_stats("home_runs") %></td>
        <td><%= @player.career_stats("rbis") %></td>
        <td><%= @player.career_stats("stolen_bases") %></td>
        <td><%= @player.career_stats("slugging_percentage") %></td>
      </tr>
  </tbody>
</table>
